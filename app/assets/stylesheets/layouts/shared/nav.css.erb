ul.nav {
	width: 400px;
	height: 50px;
    text-align: center;
	margin: 10px 0;
}

ul.nav li {
	display: inline-block;
}

ul.nav li a {
	display: block;
	background: url(<%= asset_path "posting-icons.png" %>) top left no-repeat;
	text-indent: -1000em;
	width: 50px;
	height: 50px;
}

ul.nav li {
	width: 50px;
}

/*.no-cssanimations .wave ul.nav li {
	position: relative;
	height: 50px;
}*/

ul.nav li {
	position: relative;
	height: 50px;
}

/*.no-cssanimations .wave ul.nav li a {
	position: absolute;
}*/

ul.nav li a {
	position: absolute;
}

ul.nav li.posting_text a {
	background-position: 0 0;
}

ul.nav li.posting_post_it a {
	background-position: -50px 0;
}

ul.nav li.wave_album a {
	background-position: -100px 0;
}

ul.nav li.posting_video a {
	background-position: -220px 0;
	width: 55px;
}

ul.nav li.posting_link a {
	background-position: -326px 0;
	width: 55px;
}
