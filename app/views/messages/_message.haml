.posting[message]
  %table
    %tr
      %td.avatar.thumb
        = avatar_image_tag(message.recipient_for(current_user).profile.avatar, :style => :thumb)
      %td
        %h3 Private Wave with #{link_to_profile(message.recipient_for(current_user))}
        %table
          = render :partial => "messages/reply", :object => message, :locals => { :originator => message.sender, :render_form_after_leaf => true }
      %td.button_bar
        = button_tag('Reply', :class => 'message_reply')
