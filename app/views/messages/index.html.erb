<%= sidebar %>

<div class='grid_12'>
	<table class='messages' cellspacing='0'>
	<thead>
		<tr><th colspan='4'><h1>Messages</h1></th>	</tr>	
	</thead>
	<tfoot>
		<tr><td>&nbsp;</td></tr>
	</tfoot>
	<tbody>
    <%= render :partial => 'thread', :collection => @message_threads %>		
	</tbody>
	</table>
</div>

<%= gutter %>

<%- javascript_tag do -%>
	jQuery(document).ready(function(){
		jQuery('button.view').button({ icons: { primary: 'ui-icon-triangle-1-n' }, text: false });
		jQuery('button.delete').button({ icons: { primary: 'ui-icon-close' }, text: false });
		jQuery('button.pencil').button({ icons: { primary: 'ui-icon-pencil' }, text: false });
		
		jQuery('button.pencil').click(function(){
			jQuery(this).parent().parent().hide();
		});
	});
<%- end -%>
