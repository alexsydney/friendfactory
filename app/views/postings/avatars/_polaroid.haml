- css_class = defined?(:css_class) ? css_class : ''
- id = defined?(:id) ? id : ''
- if avatar.present? && avatar.user.present?
  .polaroid-container{ :class => css_class }
    / .polaroid{ :id => id }
    .polaroid[avatar]{ :'data-id' => avatar.profile.id }
      = render :partial => 'postings/avatars/polaroid_front_face', :locals => { :avatar => avatar } 
      = render :partial => 'postings/avatars/polaroid_back_face', :locals => { :avatar => avatar } 
