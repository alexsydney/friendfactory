if @posting.present? && @posting.valid?
  page['#postings'].prepend(render(:partial => 'text', :object => @posting)).find("##{dom_id(@posting)}").effect('highlight', {}, 3000)
  page['#postings .posting:first-child .posting_comment button[type=submit]'].button({:icons => { :primary => 'ui-icon-check' }})
  page['#postings .posting:first-child .posting_comment button.cancel'].button({:icons => { :primary => 'ui-icon-close' }})
else
  page['.flash'].text("Couldn't save your posting - #{@posting.errors.full_messages}")  
end
