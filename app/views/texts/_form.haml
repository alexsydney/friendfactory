%table
  %tr
    %td{ :colspan => '2' }
      %h2= label || "Write a Message to this Wave"
  %tr
    %td.avatar.thumb= thumb_image_tag(current_user)
    %td
      = form_for Posting::Text.new, :url => wave_texts_path(:wave_id => wave) do |f|
        = f.text_field :subject, :placeholder => 'Title (optional)'
        = f.text_area :body
        .button_bar
          = f.submit :OK
          = f.button :Cancel, :class => 'cancel'
