- if @posting.present? && @posting.valid?
  $('ul.postings').prepend("#{escape_javascript(render(:partial => 'text', :object => @posting))}"); // .find("##{dom_id(@posting)}").effect('highlight', {}, 3000)
  var $currentTab = $('ul#tabs li.current').removeClass('current');
  $($('a', $currentTab).attr('href')).hide().find('form')[0].reset();
  -# reset_new_posting_comment_form(page)
- else
  $('.flash').text("Couldn't save your posting: #{@posting.errors.full_messages.to_sentence}")
