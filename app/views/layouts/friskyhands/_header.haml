.header.primary.grid_16
  = link_to 'FriskyHands', root_path, :class => 'badge'    
  %ul.nav
    %li#nav-1{ :class => "#{'current' if current_page?(:controller => 'base', :action => 'show')}" }
      = link_to 'Wave', root_path
    %li#nav-2{ :class => "#{'current' if current_page?(:controller => 'waves/polaroids', :action => 'index')}" }
      = link_to 'Roll Call', rollcall_path
    %li#nav-5{ :class => "#{'current' if current_page?(:controller => 'waves/profile', :action => 'show')}" }
      = link_to 'Roll Call', profile_path
    %li#nav-8
      = link_to 'Logout', logout_path

.header.secondary.grid_16
  .flash
  - if flash[:notice].present?
    = flash[:notice].html_safe
  %div.links
    = link_to_facebook
    - if current_user
      -# = link_to 'Logout', logout_path
      -# = link_to "#{current_user.first_name}'s Profile", profile_path

