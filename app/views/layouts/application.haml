!!! 5
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
    %title FriskyHands    
    - if Rails.env.development?
      = stylesheet_link_tag 'uncompressed/reset', :media => 'screen'
      = stylesheet_link_tag 'uncompressed/forms', :media => 'screen'
      = stylesheet_link_tag 'uncompressed/960', :media => 'screen'
    - else
      = stylesheet_link_tag 'reset', :media => 'screen'
      = stylesheet_link_tag 'forms', :media => 'screen'
      = stylesheet_link_tag '960', :media => 'screen'

    = stylesheet_link_tag "#{current_site}/jquery-ui.css", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/application", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/postings", :media => 'screen'
    / [if IE]
      = stylesheet_link_tag "#{current_site}/ie", :media => 'screen'
    = yield(:stylesheets)
    :css
      #{yield(:pagecss)}

    - if Rails.env.development?
      = javascript_include_tag 'jquery.min.js'
      = javascript_include_tag 'jquery-ui.min.js'
      = javascript_include_tag 'jquery.tools.min.js'
      = javascript_include_tag 'pusher.min.js'
    - else
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/jquery-ui.min.js'
      = javascript_include_tag 'http://cdn.jquerytools.org/1.2.5/all/jquery.tools.min.js'
      = javascript_include_tag 'http://js.pusherapp.com/1.6/pusher.min.js'      
    = javascript_include_tag 'jrails'
    = javascript_include_tag 'jquery.placeholder'
    = javascript_include_tag 'chrome'
    = javascript_include_tag 'application'
    = yield(:javascripts)
    :javascript
      jQuery(function($){
        $('body').removeClass('hidden');
        #{yield(:pagejs)}        
      });
      
  %body{ :class => "#{[ current_site, current_layout, 'hidden' ].compact * ' '}"}
    = render :partial => "layouts/#{current_site}/header"
    .container.container_16.clearfix
      = yield
      = render :partial => "layouts/#{current_site}/footer" rescue nil
      = render :partial => 'layouts/feedback' unless Rails.env.development?