!!! 5
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
    %title FriskyHands
    = stylesheet_links 'reset', 'forms', '960', :media => 'screen', :cache => 'cached'
    - site = current_site
    = stylesheet_links |
        "#{site}/jquery-ui.css", |
        "#{site}/application", |
        "#{site}/scrollable", |
        "#{site}/waves/", |
        "#{site}/postings/", |
        "#{site}/displaced", :media => 'screen', :cache => "#{site}/cached"    
    / [if IE]
      = stylesheet_link_tag "#{current_site}/ie", :media => 'screen'      
    = yield(:stylesheets)
    :css
      #{yield(:pagecss)}

    - if Rails.env.development?
      = javascript_include_tag 'jquery.min.js', 'jquery-ui.min.js', 'jquery.tools.min.js', 'pusher.min.js', 'debug.js'
    - else
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/jquery-ui.min.js'
      = javascript_include_tag 'http://cdn.jquerytools.org/1.2.5/all/jquery.tools.min.js'
      = javascript_include_tag 'http://js.pusherapp.com/1.6/pusher.min.js'    
    = javascript_includes |
        'rails', |        
        'jquery.form', |
        'jquery.remotipart', |
        'jquery.placeholder', |
        'jquery.flip', |
        'jquery.polaroid', |
        'jquery.postcard', |
        'jquery.topzindex.min', |
        'jquery.Storage', |
        'application', |
        'broadcast', |
        'waves/', |
        'inbox/', |
        'postings/', :cache => 'cached'
        
    = yield(:javascripts)    
    :javascript
      jQuery(function($){
        #{yield(:pagejs)}        
      });
    = csrf_meta_tag    
    
  %body{ :class => current_site, :'data-site_name' => current_site, :'data-first_name' => current_user.try(:first_name) }
    .floating-container.container_16.clearfix
    .container.container_16.clearfix
      = render :partial => "layouts/#{current_site}/header"
      = yield      
      = render :partial => "layouts/#{current_site}/footer" rescue nil
      = render :partial => 'layouts/feedback' unless Rails.env.development?
            
  - if Rails.env.production?
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-19948002-1']);
      _gaq.push(['_setDomainName', '.friskyhands.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();     
      