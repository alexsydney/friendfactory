!!! 5
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
    %title FriskyHands    
    - if Rails.env.development?
      = stylesheet_link_tag 'uncompressed/reset', :media => 'screen'
      = stylesheet_link_tag 'uncompressed/forms', :media => 'screen'
      = stylesheet_link_tag 'uncompressed/960', :media => 'screen'
    - else
      = stylesheet_link_tag 'reset', :media => 'screen'
      = stylesheet_link_tag 'forms', :media => 'screen'
      = stylesheet_link_tag '960', :media => 'screen'
    = stylesheet_link_tag "#{current_site}/jquery-ui.css", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/application", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/waves", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/postings", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/scrollable", :media => 'screen'
    = stylesheet_link_tag "#{current_site}/displaced", :media => 'screen'
    / [if IE]
      = stylesheet_link_tag "#{current_site}/ie", :media => 'screen'
    = yield(:stylesheets)
    :css
      #{yield(:pagecss)}

    - if Rails.env.development?
      = javascript_include_tag 'jquery.min.js'
      = javascript_include_tag 'jquery-ui.min.js'
      = javascript_include_tag 'jquery.tools.min.js'
      = javascript_include_tag 'pusher.min.js'
      = javascript_include_tag 'debug.js'
    - else
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/jquery-ui.min.js'
      = javascript_include_tag 'http://cdn.jquerytools.org/1.2.5/all/jquery.tools.min.js'
      = javascript_include_tag 'http://js.pusherapp.com/1.6/pusher.min.js'
      
    = javascript_include_tag 'rails'
    = javascript_include_tag 'jquery.form'
    = javascript_include_tag 'jquery.remotipart'
    = javascript_include_tag 'jquery.placeholder'
    = javascript_include_tag "jquery.flip"    
    = javascript_include_tag 'chrome'
    = javascript_include_tag 'application'
    = javascript_include_tag 'wave'
    = javascript_include_tag 'broadcast'  
    = javascript_include_tag 'flip6'
    = yield(:javascripts)
    :javascript
      jQuery(function($){
        #{yield(:pagejs)}        
      });
    = csrf_meta_tag    
  %body{ :class => "#{[ current_site, current_layout ].compact * ' '}", :'data-first_name' => current_user.try(:first_name), :'data-site_name' => current_site }
    .container.container_16.clearfix
      = render :partial => "layouts/#{current_site}/header"
      = yield      
      = render :partial => "layouts/#{current_site}/footer" rescue nil
      = render :partial => 'layouts/feedback' unless Rails.env.development?
  - if Rails.env.production?
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-19948002-1']);
      _gaq.push(['_setDomainName', '.friskyhands.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();     
      