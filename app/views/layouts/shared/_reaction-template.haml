%script#reaction-template{ :type => "text/template" }
  {{#posting_base}}
  {{#comments}}
  .mini_comment{ uid, gid, :id => 'posting_comment_{{id}}' }
    .portrait
      %a{ :href => '{{profile_path}}', :'data-remote' => 'true' }
        %img{ :src => '{{image_path}}', :width => '32', :height => '32', :title => '{{handle}}' }/
    .comment
      %p
        %a{ :href => '{{posting_comments_path}}', :'data-remote' => 'true', :class => 'comments' } {{body}}
      %span.date Posted {{updated_at}} ago
      %span.comments
        %a{ :href => '{{posting_comments_path}}', :'data-remote' => 'true' } Reply
  {{/comments}}
  {{/posting_base}}
  {{#wave_album}}
  %ul.photos.fetched
    {{#comments}}
    %li
      %a{ :href => '{{posting_comments_path}}', :'data-remote' => 'true', :class => 'comments', :remote => true }
        %img{ :src => '{{fetched_image_path}}', :class => 'photo {{orientation}}' }
    {{/comments}}
  %a{ :href => '{{posting_comments_path}}', :'data-remote' => 'true', :class => 'comments footer', :remote => true } Show photos &rarr;
  {{/wave_album}}