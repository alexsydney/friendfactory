%head
  %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-type' }
  %meta{ :'http-equiv' => 'X-UA-Compatible', :content => 'chrome=1' }
  %title #{current_site.display_name} - Welcome!

  = stylesheet_link_tag |
      'layouts/reset', |
      'application', |
      'layouts/welcome/welcome', |
      'layouts/welcome/welcome-override', |
      'layouts/welcome/animation', |
      'posting/headshot', |
      'posting/portrait', |
      'posting/portrait-override', |
    :media => 'screen', |
    :cache => 'cache/welcome'

  - if Rails.env.development?
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'jquery.tools-1.2.6.tiny.min'
  - else
    = javascript_include_tag 'http://code.jquery.com/jquery-1.6.4.min.js'
    = javascript_include_tag 'http://cdn.jquerytools.org/1.2.6/tiny/jquery.tools.min.js'

  = javascript_include_tag |
      'modernizr', |
      'application', |
      'jquery-ui-1.8.16.custom.min', |
      'jquery.flip', |
      'jquery.headshot', |
      'jquery.placeholder.min', |
      'layouts/welcome', |
    :cache => 'cache/welcome'

%body
  #header
    .frame
      = asset_image_tag :logo_transparent, :id => 'logo'

      - if false
        %form
          %input{:name => "email", :placeholder => "email address", :type => "text"}/
          %input{:name => "password", :placeholder => "password", :type => "password"}/
          %label.checkbox
            %input{:name => "remember", :type => "checkbox", :value => "remember"}/
          %input{:name => "signin", :type => "submit", :value => "Sign In"}/
      
      = form_for UserSession.new, :url => user_sessions_path do |f|
        = f.text_field :email, :placeholder => 'email address'
        = f.password_field :password, :placeholder => 'password'
        %label.checkbox
          %input{:name => "remember", :type => "checkbox", :value => "remember"}/
        = f.submit 'Sign In'

  .frame
    .col.left
      - if text = current_site.assets[:headline].try(:value)
        %h1= text
      - if text = current_site.assets[:byline].try(:value)
        %p= text
      %p
        Your privacy and safety are our number-one concerns. No search
        engine nor any other web site can access your #{current_site.display_name}
        secured profile.
    #badge
      - if false
        %form
          %h2 Sign up now to start socializing!
          %input{:name => "name", :placeholder => "First Name", :type => "text"}/
          %input{:name => "email", :placeholder => "Email Address", :type => "text"}/
          %input{:name => "password", :placeholder => "Password", :type => "password"}/
          %input{:name => "password_again", :placeholder => "Retype Password", :type => "password"}/
          %input{:name => "age", :placeholder => "Age", :type => "text"}/
          %input{:name => "location", :placeholder => "Location", :type => "text"}/
          %input{:name => "Signup", :type => "submit", :value => "Sign Up"}/

      - else
        = form_for @user do |f|
          %h2 Sign up to meet others just like you!
          =# f.hidden_field :invitation_code
          = f.text_field :handle, :placeholder => 'First Name'
          = f.text_field :email, :placeholder => 'Email Address'
          = f.password_field :password, :placeholder => 'Password'
          = f.password_field :password_confirmation, :placeholder => 'Retype Password'
          %input{:name => "age", :placeholder => "Age", :type => "text"}/
          %input{:name => "location", :placeholder => "Location", :type => "text"}/
          =# f.existing_user_password_label :password, 'Use your friskyfactory password', :current_site => current_site          
          =# f.new_user_password_confirmation_field :password_confirmation, 'Retype your password', :current_site => current_site, :class => 'password ui-widget', :placeholder => 'password_confirmation'          
          = f.submit 'Signup'

