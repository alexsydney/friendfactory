!!! 5
%html.no-js
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
    %title
      = current_site.name.titleize
    = stylesheet_links |
      'reset', 'forms', '960', |
      'friskyfactory/application', |
      'friskyfactory/welcome', |
      "friskyfactory/jquery-ui.css", |
      "friskyfactory/ff.jquery-ui.css", |
      "#{current_site}/application", |
      "#{current_site}/welcome", |
        :media => 'screen', :cache => "#{current_site}/welcome-cached"
        
    / [if IE]
      = stylesheet_link_tag 'friskyfactory/ie', :media => 'screen'

    - if Rails.env.development?
      = javascript_include_tag 'jquery.min.js', 'jquery-ui.min.js', 'debug.js'
    - else
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
      = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/jquery-ui.min.js'
      
    = javascript_includes |
        'modernizr-1.6.min', |    
        'rails', |
        'jquery.placehold-0.3.min', |
        'welcome', |
        :cache => 'welcome-cached'
  
  %body{ :class => current_site }
    .container.container_16.clearfix
      = yield
    .page.footer
      %p
        %span
          &copy;&nbsp;#{Date.today.year} Frisky Factory LLC, New York, NY
        = render :partial => 'layouts/grid'  
    = render :partial => 'layouts/analytics'
