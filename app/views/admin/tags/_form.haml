= form_for(@tag) do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2
        = pluralize(@tag.errors.count, "error")
        prohibited this admin_tag from being saved:
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
      %td= f.label :defective
      %td= f.text_field :defective
    %tr
      %td= f.label :corrected
      %td
        = f.text_field :corrected
        = f.submit 'OK'
        = link_to 'Cancel', admin_tags_path, :class => 'button cancel'
