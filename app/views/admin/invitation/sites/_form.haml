= form_for [ :admin, site, invitation ] do |f|
  - if invitation.errors.any?
    #error_explanation
      %h2
        = pluralize(invitation.errors.count, "error")
        prohibited this invitation from being saved:
      %ul
        - invitation.errors.full_messages.each do |msg|
          %li= msg
  %table.invitations.form
    %tr
      %td Site
      %td= site.display_name
    %tr
      %td= f.label :code, 'Sign Up Code'
      %td
        = f.text_field :code
        = f.submit 'OK'
        = link_to 'Cancel', :back
