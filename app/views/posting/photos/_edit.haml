= form_for photo, :url => publish_wave_posting_photo_path(wave, photo), :html => { :multipart => true }, :remote => true do |f|
  %table
    %tr
      %td.avatar.thumb
        .post_it.form<
          = avatar_image_tag(current_user, :style => :thumb, :align => 'left', :anonymous => false, :gender => current_user.user_info.gender)
          %span= "Posted by #{link_to_profile(current_user)}".html_safe
          = f.text_area :subject, :placeholder => 'Caption'
      %td
        #posting_photo_upload_well
          = render_photo(photo)
        .button-bar
          = f.file_field :image, :'data-method' => :put, :action => wave_posting_photo_path(wave, photo)
          = f.submit 'Done', :as_button => false
          = f.button 'Cancel', wave_posting_photo_path(wave, photo), :remote => true, :method => :delete
