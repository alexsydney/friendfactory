= form_for photo, :url => wave_posting_photo_path(wave, photo), :remote => true do |f|
  %table
    %tr
      %td.avatar.thumb
        .post_it.attachment.form<
          .content<
            = avatar_image_tag(photo.user, :style => :thumb, :align => 'left', :anonymous => false, :gender => photo.user.user_info.gender)
            %span= "Posted by #{link_to_profile(photo.user)}".html_safe
            = f.text_area :subject, :placeholder => 'Caption'
      %td
        #posting_photo_upload_well
          = render_photo(photo)
        .button-bar
          = f.submit 'Done'
          = button_tag 'Cancel', :id => 'posting_photo_cancel', :method => :delete, :action => wave_posting_photo_path(wave, photo)
