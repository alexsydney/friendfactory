- if @posting.present? && @posting.valid?
  $('ul.postings').prepend("#{escape_javascript(render(:partial => 'text', :object => @posting))}");
  var $currentTab = $('ul.wave.nav li.current').removeClass('current');
  $($('a', $currentTab).attr('rel')).slideUp().trigger('reset');
  $('.flash').text('');
- else
  $('.flash').text("Couldn't save your posting: #{@posting.errors.full_messages.to_sentence}")
