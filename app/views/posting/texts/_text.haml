- user = text.user
- if text.subject.present? || text.body.present?
  .post_frame
    .posting.post.blog[text]{uid(text[:user_id])}
      = link_to_unpublish(text)
      .portrait
        = thimble_link_to_profile(user)
      .clear
        .cell
          - if text.subject.present?
            %h1= text.subject
          by
          = link_to_profile(user)
          - if text.body.present?
            %p= text.body
          - if false
            %p{:style => "text-align: center;"}
              %a{:href => ""} View Full Post &rarr;
        .torn
        = posted_distance_of_time(text)
        = link_to_comments(text.children.type(Posting::Comment).published.count, posting_comments_path(text))
    .reaction
