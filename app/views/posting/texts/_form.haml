= form_for new_posting_text, :url => wave_posting_texts_path(@wave), :remote => true do |f|
  %table
    %tr
      %td.avatar.thumb
        &nbsp;
      %td
        .index-card
          .content
            = avatar_image_tag(new_posting_text.user, :style => :thumb, :anonymous => false, :gender => new_posting_text.user.user_info.gender)
            = link_to_profile(new_posting_text.user)
            = f.text_area :subject, :placeholder => 'Subject (optional)'
            = f.text_area :body, :placeholder => 'Say something!'
        .button-bar
          = f.submit :OK, :disable_with => 'OK'
          = f.button :Cancel, :class => 'cancel'
