= form_for new_posting_post_it, :url => wave_posting_post_its_path(@wave), :remote => true do |f|
  %table
    %tr
      %td.avatar.thumb
        &nbsp;
      %td
        .post_it.form<
          = avatar_image_tag(new_posting_post_it.user, :style => :thumb, :align => 'left', :anonymous => false, :gender => new_posting_post_it.user.user_info.gender)
          = f.text_area :subject, :placeholder => 'Short message'
        .button-bar
          = f.submit :OK, :disable_with => 'OK'
          = f.button :Cancel, :class => 'cancel'
