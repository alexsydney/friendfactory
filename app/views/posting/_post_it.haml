- if defined?(posting) && posting.present?
  .post_it
    = image_tag('post-it.png')
    = thumb_image_tag(posting.user.profile.avatar) rescue '&nbsp;'.html_safe
    %p
      %span
        Posted
        - if posting.user.first_name.present?
          = "by #{posting.user.first_name}"
      %span
        = distance_of_time_in_words_to_now(posting.created_at)
- else
  &nbsp;
