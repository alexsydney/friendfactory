.posting[video]
  %table
    %tr
      %td.avatar.thumb
        = render_attachment(video)
      %td
        .youtube_player{ :'data-vid' => video.body }
        = render :partial => 'posting/comments/comment', :collection => video.children.comments
        %div{:id => "posting_#{video.id}_new_comment_well"}
        = render :partial => 'posting/comments/new', :locals => { :parent => video }
