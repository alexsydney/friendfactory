- nested = mini_comment.parent[:parent_id].present? && 'nested'
.mini_comment.posting{ uid, gid, :class => [ nested ] }[ mini_comment ]
  .portrait= thimble_link_to_profile(mini_comment.user, :remote => true)
  .comment
    %p= mini_comment.body
    %span.date #{distance_of_time_in_words_to_now(mini_comment.created_at).titleize} ago
    = link_to_comments('Reply', posting_comments_path(posting))
