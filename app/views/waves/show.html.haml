- javascript 'wave'
.wave.grid_12[@wave]
  %ul#tabs
    %li.avatar
    / =thumb_image_tag(current_user, :online_badge => false, :class => 'button')
    %li
      %a{ :href => '#text', :class => 'current' } Text
    %li
      %a{ :href => '#photo' } Photo
    %li
      %a{ :href => '#video' } Video
    %li
      %a{ :href => '#chat' } Chat
    %li
      %a{ :href => '#hottie' } Hottie
    %li
      %a{ :href => '#link' } Link
    %li
      %a{ :href => '#link' } Event
    %li
      %a{ :href => '#link' } Poll
  %h1= h @wave.topic
  = content_tag(:p, flash[:notice], :class => 'flash') if flash[:notice]
  - if false
    #log
  = render :partial => 'postings/posting', :collection => @wave.postings.for(current_user)

:javascript
  jQuery(document).ready(function($){		
    $('#tabs li:eq(1)').button({ icons: { primary: 'ui-icon-pencil' }});			
    $('#tabs li:eq(2)').button({ icons: { primary: 'ui-icon-image' }})	
    $('#tabs li:eq(3)').button({ icons: { primary: 'ui-icon-video' }});	
    $('#tabs li:eq(4)').button({ icons: { primary: 'ui-icon-comment' }});
    $('#tabs li:eq(5)').button({ icons: { primary: 'ui-icon-heart' }});
    $('#tabs li:eq(6)').button({ icons: { primary: 'ui-icon-link' }});
    $('#tabs li:eq(7)').button({ icons: { primary: 'ui-icon-clock' }});
    $('#tabs li:eq(8)').button({ icons: { primary: 'ui-icon-signal' }});
  });