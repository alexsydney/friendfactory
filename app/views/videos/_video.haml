.posting[video]
  %table
    %tr
      %td.avatar.thumb= thumb_image_tag(video.user.profile.avatar)
      %td
        = video.body
        %p= h video.subject
        %p
          = link_to_profile(video.user)
          \ #{distance_of_time_in_words_to_now(video.created_at)}
        = render :partial => 'comments/comment', :collection => video.children.comments
        %div{:id => "posting_#{video.id}_new_comment_well"}
        = render :partial => 'comments/new', :locals => { :parent_id => video.id }
