= form.fields_for :persona, personage.persona do |persona_form|
  = hidden_field_tag :pane, params[:pane], :id => nil
  .headshot-container
    .headshot
      .face
        .pane
          %table.biometrics
            %tr
              %td.label Handle
              %td.detail= persona_form.text_field :handle, :placeholder => 'name', :maxlength => 20, :size => 16
            %tr
              %td.label Hangs Out
              %td.detail= persona_form.text_field :location, :placeholder => 'location', :maxlength => 20, :size => 16
            %tr
              %td.detail{ :colspan => '2' }
                = persona_form.text_area :description, :placeholder => 'about me', :maxlength => 200, :class => 'ambassador_persona_description'
