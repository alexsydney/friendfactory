= form.fields_for :persona, personage.persona do |persona_form|
  .headshot-container
    .headshot
      .face
        .pane
          %table.biometrics
            %tr
              %td.label Name
              %td.detail= persona_form.text_field :handle, :placeholder => 'name', :maxlength => 20
            %tr
              %td.detail{ :colspan => '2' }
                = persona_form.text_area :description, :placeholder => 'about the community', :maxlength => 200, :class => 'community_persona_description'
