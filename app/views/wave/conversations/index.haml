- content_for :tag_cloud do
  - tag_cloud(tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class|
    - tag_as_param = tag.name.gsub(/\s/, '-').downcase
    - current = false
    - if tag_as_param == params[:tag]
      - current = true
      - css_class += " current"
      - tag_as_param = nil
    = link_to tag.name, inbox_path(:tag => tag_as_param), :class => css_class
    - if current
      = link_to "(untag)", inbox_path, :class => 'tag1 current'
#inbox
  %div.clearfix
    - recipient_ids.in_groups_of(4) do |group|
      - group.each_with_index do |recipient_id, idx|
        - unless recipient_id.nil?
          - if profile = profiles_by_user_id[recipient_id.resource_id]
            = render :partial => 'wave/profiles/headshot', :locals => { :profile => profile }
  = will_paginate recipient_ids, :class => 'footer pagination'