- if @most_recent_date.present?
  %div.datecell.clearfix
    %p.date
      Received
      = inbox_distance_of_time_in_words_to_now(@most_recent_date)
    - @recipient_ids.in_groups_of(4) do |group|
      - group.each_with_index do |recipient_id, idx|
        - unless recipient_id.nil?
          - if profile = @profiles_by_user_id[recipient_id]
            = render :partial => 'wave/profiles/headshot', :locals => { :profile => profile }