- content_for :rollcall do
  - profiles = profiles_on_wave.limit(40).reject{ |p| p.avatar.silhouette? }
  - profiles[0..29].each_with_index do |profile, idx|
    - css_class = (idx + 1) % 5 == 0 ? 'omega' : nil
    .portrait{ :class => css_class }= thimble_link_to_profile(profile)
  - count = profiles_on_wave.count - 30
  - if count > 0
    = link_to "#{count} more &rarr;".html_safe, wave_rollcall_path(params[:id] || current_site.home_wave, :page => params[:page]), :class => 'more'
#floating
#frame
  = render :partial => 'layouts/shared/reaction-template'
  = render :partial => 'layouts/shared/nav'
  = render :partial => 'show'
  = render :partial => 'layouts/shared/unpublish_overlay'
