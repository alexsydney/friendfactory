  %ul#button-bar
    %li.status{:onclick => "newPost('status')"}
    %li.blog
    %li.photo
    %li.video
    
  / ADD STATUS
  .new_post.status
    %form
      %textarea{:placeholder => "Enter Text..."}
      .foot
        %input{:name => "", :type => "submit", :value => "Post"}/
        %input{:name => "", :type => "button", :value => "Cancel"}/
  / ADD BLOG
  .new_post.blog
    %form
      .body
        %input{:name => "", :placeholder => "Post Title", :type => "text"}/
        %textarea{:placeholder => "Enter Text"}
      .foot
        %input{:name => "", :type => "submit", :value => "Post"}/
        %input{:name => "", :type => "button", :value => "Cancel"}/
  / ADD PHOTO
