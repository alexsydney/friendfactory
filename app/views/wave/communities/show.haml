    %form
      .body
        %input{:name => "", :type => "file", :value => ""}/
      .foot
        %input{:name => "", :type => "submit", :value => "Post"}/
        %input{:name => "", :type => "button", :value => "Cancel"}/
  / ADD VIDEO
  .new_post.video
    %form
      %input{:name => "", :placeholder => "Paste Video URL", :type => "text"}/
      .foot
        %input{:name => "", :type => "submit", :value => "Post"}/
        %input{:name => "", :type => "button", :value => "Cancel"}/

