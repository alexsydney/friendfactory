- user = album.user
- photo = album.photos.limit(1).first
- if photo.present?
  .post.photos[proxy]{uid(album[:user_id]), :class => 'wave_album' }
    = link_to_unpublish(proxy)
    .portrait= thimble_link_to_profile(user)
    .clear
      .photo= image_tag(photo.image.url(:h4x6))
      %span.date Posted #{distance_of_time_in_words_to_now(proxy.created_at)} ago
      = link_to_comments(album.postings.published.count, posting_comments_path(proxy))
  .reaction.hidden
