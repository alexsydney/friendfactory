- if @wave.valid?
  :plain
    $('ul.waves').prepend("#{escape_javascript(render :partial => 'wave/events/event', :object => @wave)}");    
    $("##{dom_id(@wave)} .ticket-container > .ticket").ticket();
    $('#new_event_overlay').hideNavContent();
- else
  - @wave.errors.each do |field, message|
    :plain      
      $('#new_wave_event')
        .find('.button-bar button').removeClass('ui-state-disabled').end()
        .find("#wave_event_#{field}").addClass('field-error').end()
        .find('textarea, input[type="text"]').placehold();

    