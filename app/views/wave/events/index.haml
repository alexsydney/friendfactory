.wave.header.clearfix<
  .grid_1<
    &nbsp;
  .grid_4<
    = render :partial => 'nav'
  .grid_6<
    &nbsp;
  .grid_5<
    &nbsp;

.grid_1<
  &nbsp;
.grid_14<
  .tag-cloud<
    - tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class|
      - css_class = 'tag4' if tag.name.downcase == 'deaf' # TODO !!!
      - css_class += " current" if tag.name == params[:tag]
      = link_to tag.name.titleize, roll_call_path(:tag => tag.name.gsub(/\s/, '-')), :class => css_class
.grid_1<
  &nbsp;

.wave.events<
  .grid_2<
    &nbsp;
  .grid_12<
    = render :partial => 'new'
    %ul.waves
      = render :partial => 'event', :collection => @waves
  .grid_2<
    &nbsp;
    
.grid_16<
  = will_paginate @waves
