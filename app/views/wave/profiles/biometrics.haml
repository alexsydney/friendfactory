- if @profile.present?
  %table.biometrics
    %tr
      %td.label Name
      %td.detail= @profile.handle
    %tr
      %td.label Age?
      %td.detail= @profile.age.present? ? @profile.age : '&nbsp;'.html_safe
    - current_site.signal_categories.each do |signal_category|
      = render :partial => 'signal_category', :object => signal_category
    %tr
      %td.label Birthday
      %td.detail= @profile.dob.try(:strftime, '%e %B') || '&nbsp;'.html_safe
    %tr
      %td.label Location
      %td.detail= @profile.location
